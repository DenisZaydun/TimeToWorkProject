@page
@model TimeToWork.Pages.Clients.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Client</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client.FirstMidName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.FirstMidName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.PhoneNumber)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client.Appointments)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Послуга</th>
                    <th>Дата</th>
                </tr>
                @foreach (var item in Model.Client.Appointments)
                {
                        <tr>
                            <td>
                            @Html.DisplayFor(modelItem => item.Service.ServiceName)
                            </td>
                            <td>
                            @Html.DisplayFor(modelItem => item.Date)
                            </td>
                        </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Client?.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
